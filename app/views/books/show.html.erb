<p id="notice"><%= flash[:notice] %></p>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/userinfo', userid: @bookid.user, book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <h2>Book detail</h2>
              <td id="favorite_buttons_<%= @bookid.id %>">
               <%= render "favorites/favorite", book: @bookid %>
              </td>
               <td><%= "#{@bookid.book_comments.count} コメント" %></td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <div>
                 <%= image_tag @bookid.user.get_profile_image(80,80)%>
                </div>
                <div>
                 <%= link_to "#{@bookid.user.name}", user_path(@bookid.user_id) %>
                </div>
              </td>
              <td>
                <%= link_to "#{@bookid.title}", book_path %>
              </td>
              <td>
                <%= @bookid.body %>
              </td>
              <% if @bookid.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path, class:"btn btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@bookid), method: :delete, class:"btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %>
              </td>
              <% end %>
            </tr>
                <table>
                  <% @bookid.book_comments.each do |book_comment| %>
                  <tr>
                    <td><%= image_tag book_comment.user.get_profile_image(80,80) %></td>
                    <td><%= book_comment.comment %></td>
                  </tr>
                </table>
                <table>
                  <td><%= book_comment.user.name %></td>
                  <td><%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
                  <td>
                    <% if book_comment.user == current_user %>
                      <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete , class: "btn btn-sm btn-danger" %>
                    <% end %>
                  </td>
                  <% end %>
                </table>
                <table>
                  <br>
                    <%= form_with model: [@bookid, @book_comment], class: 'js-form' do |f| %>
                      <%= f.text_area :comment, rows: '5', placeholder: "Comment" %>
                      <%= f.submit "Submit", class:"btn btn-sm btn-success" %>
                    <% end %>
                </table>
              </td>
          </tbody>
        </table>
      </div>
    </div>
  </div>