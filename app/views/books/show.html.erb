<p id="notice"></p>
  <div class="conteiner px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
          <% if @user.profile_image.attached? %>
            <%= image_tag profile_image, size: "100x100" %>
          <% else %>
            <%= image_tag 'default-image', size: "100x100" %>
          <% end %>
        <table clas="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <% if @user == current_user %>
          <div class="row">
            <%= link_to "編集", edit_user_path(@user.id) %>
          </div>
        <% end %>
        <h2 class="mt-3>">New book</h2>
        <%= form_with model: @book do |f| %>
        <div class="form-group">
          <h4>Title</h4>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <h4>Opinion</h4>
          <%= f.text_area :body, class:"form-control", rows:"3" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class:"btn btn-sm btn-success" %>
        </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <h2>Book detail</h2>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <div>
                 <% if @user.profile_image.attached? %>
                 <%= image_tag profile_image, size: "80x80" %>
                 <% else %>
                 <%= image_tag 'default-image', size: "80x80" %>
                 <% end %>
                </div>
                <div>
                 <%= link_to "#{@user.name}", user_path %>
                </div>
              </td>
              <td>
                <%= link_to "#{@bookid.title}", book_path %>
              </td>
              <td>
                <%= @bookid.body %>
              </td>
              <% if @bookid.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path, class:"btn btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@bookid), method: :delete, class:"btn btn-sm btn-danger" %>
              </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>