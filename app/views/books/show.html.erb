
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/userinfo', userid: @bookid.user, book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <h2>Book detail</h2>
              <td id="favorite_buttons_<%= @bookid.id %>">
               <%= render "favorites/favorite", book: @bookid %>
              </td>
               <td><%= "#{@bookid.book_comments.count} コメント" %></td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <div>
                 <%= image_tag @bookid.user.get_profile_image(80,80)%>
                </div>
                <div>
                 <%= link_to "#{@bookid.user.name}", user_path(@bookid.user_id) %>
                </div>
              </td>
              <td>
                <%= link_to "#{@bookid.title}", book_path %>
              </td>
              <td>
                <%= @bookid.body %>
              </td>
              <% if @bookid.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path, class:"btn btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@bookid), method: :delete, class:"btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %>
              </td>
              <% end %>
            </tr>
          </tbody>
        </table>
        <%= render "book_comments/book_comment", bookid: @bookid %>
        <td id="comment_buttons">
        <%= render "book_comments/comment_form", bookid: @bookid, comment: @book_comment %>
        </td>
      </div>
    </div>
  </div>