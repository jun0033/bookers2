
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Book</h2>
        <%= render 'users/errorexplanation', book: @bookid %>
        <%= form_with model: @bookid do |f| %>
          <div class="form-group">
            <h4>Title</h4>
            <%= f.text_field :title, class:"form-control", placeholder: @bookid.title %>
          </div>
          <div class="form-group">
            <h4>Opinion</h4>
            <%= f.text_area :body, class:"form-control", placeholder: @bookid.body %>
          </div>
          <div class="form-group">
            <%= f.submit 'Update Book', class:"btn btn-success" %>
          </div>
        <% end %>
        <%= link_to "Show", book_path(@bookid) %>
        |
        <%= link_to "Back", books_path %>
    </div>
  </div>
</div>