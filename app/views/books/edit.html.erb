<p id="notice"></p>
<div class="conteiner">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>Editing book</h2>
          <%= form_with model: @bookid do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title, class:"form-control", placeholder: @bookid.title %>
          <h4>Opinion</h4>
          <%= f.text_area :body, class:"form-control", rows:"3", placeholder: @bookid.body %>
          <hr>
          <%= f.submit 'Update Book', class:"btn btn-lg btn-block btn-info mt-4" %>
          <% end %>
          <%= link_to "show", book_path(@bookid) %>
          |
          <%= link_to "Back", books_path %>
    </div>
  </div>
</div>