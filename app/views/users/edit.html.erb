<div class="conteiner">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>User info</h2>
          <%= form_with model: @user do |f| %>
          <h4>Name</h4>
          <%= f.text_field :Name, class:"form-control" %>
          <h4>Image</h4>
          <%= f.file_field :profile_image, accept: "image/*" %>
          <h4>Introduction</h4>
          <%= f.text_area :Introduction, class:"form-control", rows:"3" %>
          <hr>
          <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-info mt-4" %>
          <% end %>
    </div>
  </div>
</div>