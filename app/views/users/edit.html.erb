<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>User info</h2>
          <div id="error_explanation">
            <% if @userid.errors.any? %>
            <h3><%= @userid.errors.count %> error prohibited this obj from being saved:</h3>
            <ul>
              <% @userid.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
            <% end %>
          </div>
          <%= form_with model: @userid do |f| %>
          <div class="form-group">
          <%= f.label :Name %>
          <%= f.text_field :name, class:"form-control" %>
          </div>
          <div class="form-group">
          <%= f.label :Image %>
          <br>
          <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
          <div class="form-group">
          <%= f.label :Introduction %>
          <%= f.text_area :introduction, class:"form-control" %>
          </div>
          <div class="form-group">
          <%= f.submit 'Update User', class:"btn btn-secondary" %>
          </div>
          <% end %>
    </div>
  </div>
</div>