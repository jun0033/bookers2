<p id="notice"><%= flash[:notice] %></p>
  <div class="conteiner px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @userid.get_profile_image(100,100) %>
        <table clas="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @userid.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @userid.introduction %></th>
            </tr>
          </tbody>
        </table>
        <% if @userid == current_user %>
            <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
        <% else %>
            <%= link_to user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
        <% end %>
        <h2 class="mt-3>">New book</h2>
        <%= form_with model: @book do |f| %>
        <div class="form-group">
          <h4>Title</h4>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <h4>Opinion</h4>
          <%= f.text_area :body, class:"form-control", rows:"3" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class:"btn btn-sm btn-success" %>
        </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% @mybooks.each do |book| %>
              <td>
                 <%= image_tag book.user.get_profile_image(80,80) %>
              </td>
              <td>
                <%= link_to "#{book.title}", book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>