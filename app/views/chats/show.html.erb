<div class="container message">
    <h2>CHAT WITH <%= @user.name %></h2>
      <div style="text-align: left; font-size: 20px;"><%= @user.name %></div>
      <div style="text-align: right; font-size: 20px;"><%= current_user.name %></div>
      <% @chats.each do |chat| %>
        <% if chat.user_id == current_user.id %>
              <div style="text-align: right;" class= "row shadow-lg p-3 mb-5 bg-light rounded" ><%= chat.message %></div>
        <% else %>
              <div style="text-align: left;" class= "row shadow-lg p-3 mb-5 bg-light rounded" ><%= chat.message %></div>
        <% end %>
      <% end %>
      <div id="newchat"></div>
    <%= form_with model: @chat, local: false do |f| %>
      <%= f.text_field :message %>
      <%= f.hidden_field :room_id %>
      <%= f.submit "SEND", class:"btn btn-sm btn-success chat-btn" %>
    <% end %>
  </div>
</div>