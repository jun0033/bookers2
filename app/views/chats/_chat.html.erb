<table class="message table">
              <thead>
                <tr>
                  <div style="text-align: left; font-size: 20px;"><%= current_user.name %></div>
                  <div style="text-align: right; font-size: 20px;"><%= user.name %></div>
                </tr>
              </thead>
              <% chats.each do |chat| %>
                <% if chat.user_id == current_user.id %>
                <tbody>
                  <tr>
                    <th>
                      <p style="text-align: left;"><%= chat.message %></p>
                    </th>
                    <th></th>
                  </tr>
                <% else %>
                  <tr>
                    <th></th>
                    <th>
                      <p style="text-align: right;"><%= chat.message %></p>
                    </th>
                  </tr>
                </tbody>
                <% end %>
              <% end %>
            </table>