
<div class="container px-5 px-sm-0">
  <div class="row">
    <table class="table table-hover table-inverse">
      <% if @range == "User" %>
        <thead>
          <h2>Users search for "<%=@word %>"</h2>
        </thead>
        <tbody>
          <tr>
            <td></td>
            <td>User Name</td>
          </tr>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(80,80) %></td>
              <td><%= link_to user_path(user.id) do %>
              <%= user.name %>
              <% end %></td>
            </tr>
          <% end %>
        </tbody>
      <% else %>
        <thead>
          <h2>Books search for "<%=@word %>"</h2>
        </thead>
        <tbody>
          <tr>
            <td></td>
            <td>Title</td>
            <td>Opinion</td>
          </tr>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(80,80) %></td>
              <td><%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      <% end %>
    </table>
  </div>
</div>